{
  "blockchain": {
    "type": "fabric",
    "config": "../benchmark/fabric.json"
  },
  "command" : {
    "start": "docker-compose -f network/fabric/simplenetwork/docker-compose.yaml up -d"
  },
  "test": {
    "name": "simple",
    "description" : "This is an example benchmark for caliper, to test the backend DLT's performance with simple account opening & querying transactions",
    "clients": {
      "type": "local",
      "number": 5
    },
    "rounds": [{
        "label" : "simpleOperations",
        "txNumber" : [400, 1000, 2000],
        "rateControl" : [{"type": "fixed-rate", "opts": {"tps" : 20}}, {"type": "fixed-rate", "opts": {"tps" : 50}}, {"type": "fixed-rate", "opts": {"tps" : 100}}],
        "arguments": {"accounts":100, "txnPerBatch":100},
        "callback" : "../benchmark/simpleOperations.js"
      },
      {
        "label" : "query",
        "txNumber" : [200, 400, 1000, 2000],
        "rateControl" : [{"type": "fixed-rate", "opts": {"tps" : 10}}, {"type": "fixed-rate", "opts": {"tps" : 20}}, {"type": "fixed-rate", "opts": {"tps" : 50}}, {"type": "fixed-rate", "opts": {"tps" : 100}}],
        "callback" : "../benchmark/query.js"
      }]
  },
  "monitor": {
    "type": ["docker", "process"],
    "docker":{
      "name": ["all"]
    },
    "process": [
      {
        "command" : "node",
        "arguments" : "local-client.js",
        "multiOutput" : "avg"
      }
    ],
    "interval": 1
  }
}